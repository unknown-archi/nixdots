// Waybar Configuration File for Hyprland
{
  // Define the position and appearance of the bar
  "layer": "top",
  "position": "top",
  "height": 30,

  // Modules on the left side of the bar
  "modules-left": [
    "sway/workspaces", // Workspaces module (compatible with Hyprland)
    "hyprland/window"  // Active window title
  ],

  // Modules at the center of the bar
  "modules-center": [
    "clock" // Clock module
  ],

  // Modules on the right side of the bar
  "modules-right": [
    "cpu",         // CPU usage
    "memory",      // Memory usage
    "network",     // Network status
    "pulseaudio",  // Audio volume
    "battery",     // Battery status
    "tray"         // System tray
  ],

  // Workspaces module configuration
  "sway/workspaces": {
    "all-outputs": true,      // Show workspaces from all outputs
    "format": "{name}",       // Display workspace name
    "disable-scroll": true    // Disable scrolling to change workspaces
  },

  // Active window title module
  "hyprland/window": {
    "max-length": 80,        // Maximum length of the title
    "format": "{title}"      // Display the window title
  },

  // Clock module configuration
  "clock": {
    "format": "{:%A, %B %d, %Y %H:%M:%S}", // Display format of the date and time
    "tooltip": false                    // Disable tooltip
  },

  // CPU module configuration
  "cpu": {
    "format": "CPU: {usage}%",           // Display CPU usage percentage
    "format-alt": "Load: {load1} {load5} {load15}", // Alternate format when clicked
    "interval": 5                        // Update interval in seconds
  },

  // Memory module configuration
  "memory": {
    "format": "RAM: {used} / {total} GB", // Display used and total memory
    "tooltip": false,                     // Disable tooltip
    "interval": 10                        // Update interval in seconds
  },

  // Network module configuration
  "network": {
    "interface": "auto",                   // Automatically select the network interface
    "format-wifi": "WiFi: {essid} ({signalStrength}%)",   // Format when connected to WiFi
    "format-ethernet": "LAN: {ipaddr}",    // Format when connected via Ethernet
    "format-disconnected": "No Network",   // Format when disconnected
    "interval": 5                         // Update interval in seconds
  },

  // Volume module configuration using PulseAudio
  "pulseaudio": {
    "format": "Vol: {volume}%"            // Display the volume percentage
  },

  // Battery module configuration
  "battery": {
    "format": "Batt: {percentage}%",      // Display battery percentage
    "format-full": "Charged",             // Display when battery is full
    "tooltip": false,                     // Disable tooltip
    "interval": 30                        // Update interval in seconds
  },

  // System tray module configuration
  "tray": {
    "icon-size": 16                       // Size of the tray icons
  },

  // Global settings applied to the bar
  "settings": {
    "icon_theme": "Papirus",                // Icon theme to use
    "font": "Montserrat 12",     // Font family and size
    "spacing": 10                          // Spacing between modules
  }
}
